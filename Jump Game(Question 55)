class Solution {
    public boolean canJump(int[] nums) {
        int farthest = 0;                 // farthest index we can reach so far
        for (int i = 0; i < nums.length; i++) {
            if (i > farthest) return false;            // can't even reach i
            farthest = Math.max(farthest, i + nums[i]);
            if (farthest >= nums.length - 1) return true; // already can reach/end
        }
        return true; // loop finished without getting stuck
    }
}
