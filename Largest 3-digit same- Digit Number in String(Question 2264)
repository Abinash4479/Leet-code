class Solution {
    public String largestGoodInteger(String num) {
        char best = 0;
        boolean found = false;

        for (int i = 0; i + 2 < num.length(); i++) {
            char a = num.charAt(i);
            if (a == num.charAt(i + 1) && a == num.charAt(i + 2)) {
                if (!found || a > best) {
                    best = a;
                    found = true;
                }
            }
        }

        return found ? "" + best + best + best : "";
    }
}
