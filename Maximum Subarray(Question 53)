class Solution {
    public int maxSubArray(int[] nums) {
        int best = nums[0];
        int curr = nums[0];
        for (int i = 1; i < nums.length; i++) {
            // Either extend the current subarray or start new at nums[i]
            curr = Math.max(nums[i], curr + nums[i]);
            best = Math.max(best, curr);
        }
        return best;
    }
}
